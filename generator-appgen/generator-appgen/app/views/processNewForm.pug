doctype html(lang='en')
head
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(http-equiv='x-ua-compatible', content='ie=edge')
  title= appName 
  link(rel='stylesheet', href='./../../public/stylesheets/bootstrap.min.css', crossorigin='anonymous')
  link(rel='stylesheet', href='./../../public/stylesheets/icon.css')
  link(rel='stylesheet', href='./../../public/stylesheets/font-awesome.css')
  link(rel='stylesheet', href='./../../public/stylesheets/index.css')

  body
    include navbar

    .main.container
      .row
        .col-md-6.col-md-offset-3
          h1 Submission Form
          form(method='POST' action=href)
            each val in reqs
                if (val.text!='Type')
                    div.form-group
                        label(for=val.text) #{val.text}:
                        if (!val.obligatory)
                          input#name.form-control(type=val.type, name=val.text)
                        else
                          input#name.form-control(type=val.type, name=val.text required)
                else
                  div.form-group
                    label(for=val.text) #{val.text}:
                    if (!val.obligatory)
                      input#name.form-control(type=val.type, name=val.text value=name readonly)
                    else
                      input#name.form-control(type=val.type, name=val.text value=name readonly required)
            button.btn.btn-primary.btn-block(type='submit' ) Confirm
    p.foot.text-xs-center Generated by AppGen - LEI 2017/2018

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/js/bootstrap.min.js', crossorigin='anonymous')