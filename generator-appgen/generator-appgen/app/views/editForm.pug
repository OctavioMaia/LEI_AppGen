doctype html(lang='en')
head
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(http-equiv='x-ua-compatible', content='ie=edge')
  title= appName 
  link(rel='stylesheet', href='./../../../public/stylesheets/bootstrap.min.css', crossorigin='anonymous')
  link(rel='stylesheet', href='./../../../public/stylesheets/icon.css')
  link(rel='stylesheet', href='./../../../public/stylesheets/font-awesome.css')
  link(rel='stylesheet', href='./../../../public/stylesheets/index.css')

  body
    include navbar

    .main.container
      .row
        .col-md-6.col-md-offset-3
          h1 Edit Form
          form(method='POST' action=href)
            each val,key in reqs
              if (key!='_id' && key!='Type' && key!='Date')
                div.form-group
                  label(for=key) #{key}:
                  input#name.form-control(type='text', name=key value=val)
            button.btn.btn-primary.btn-block(type='submit' ) Confirm
    p.foot.text-xs-center Generated by StartApp - LEI 2017/2018

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/js/bootstrap.min.js', crossorigin='anonymous')