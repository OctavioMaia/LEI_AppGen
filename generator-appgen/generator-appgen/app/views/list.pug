doctype html(lang='en')
head
	meta(charset='utf-8')
	meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
	meta(http-equiv='x-ua-compatible', content='ie=edge')
	title= appName
	link(rel='stylesheet', href='../public/stylesheets/bootstrap.min.css', crossorigin='anonymous')
	link(rel='stylesheet', href='../public/stylesheets/icon.css')
	link(rel='stylesheet', href='../public/stylesheets/font-awesome.css')
	link(rel='stylesheet', href='../public/stylesheets/index.css')
	link(rel='stylesheet', href='../public/stylesheets/social-share-kit.css')
	script(type="text/javascript" src="../public/js/social-share-kit.js")
	body
		include navbar
		block content
		.main.container
			.row
				.col-md-8.col-md-offset-2
					h3.display-4.m-b-2 Data Listing
			.row
			.col-lg-2.col-sm-12.left
				div(class="btn-group-vertical pull-right")
					a(href="/list" class="btn btn-light2") All
					a(href="/list/Thought" class="btn btn-light2") Thought
					a(href="/list/Wedding" class="btn btn-light2") Wedding
					a(href="/list/Teste" class="btn btn-light2") Teste
			.col-lg-9.col-sm-12.right
				each val in data
					.social-feed-box
						.social-avatar
							h4 Author: #{val.Author}
								a.pull-left(href="")
									img(alt="image" src='./../public/images/avatar.png')
								a.pull-right(href='list/remove/'+val._id)
									img(alt="image" src='https://cdn4.iconfinder.com/data/icons/controls-add-on-flat/48/Contols_-_Add_On-35-512.png')
								a.pull-right(href='/insertmenu/'+ val.Type +'Form/edit'+ val.Type +'Schema/'+val._id)
									img(alt="image" src='https://cdn.icon-icons.com/icons2/317/PNG/512/pencil-icon_34383.png')
								.media-body
									if val.Date
										small.text-muted.white #{(val.Date).toString().substring(0, 16)}
							.social-body
								each value,key in val
									if (key != "_id"&& value != ''&& value != null && key!='Author' && key!='Date')
										h3 #{key}: #{value}
					br
		p.foot.text-xs-center Generated by StartApp - LEI 2017/2018
	script(type='text/javascript').
		SocialShareKit.init();
	script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
	script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/js/bootstrap.min.js', crossorigin='anonymous')
