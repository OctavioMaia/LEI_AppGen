            if hasUsers
              if currentUser
                a.nav-item.nav-link.btn.btn-logout.pull-md-right(href='/auth/logout') Logout
              else 
                a.nav-item.nav-link.btn.btn-login.pull-md-right(href='/auth/login') Login/Register