  button.navbar-toggler.hidden-md-up.pull-xs-right(type='button', data-toggle='collapse', data-target='#navbar') &#x2630;
  #navbar.navbar-nav.collapse.navbar-toggleable-sm
    .container
      a(class="navbar-brand" href="/")
        img(src='' style='max-width:30px; display: inline-block;' class='img-fluid')
        span(style="display: inline-block; margin:5px;") AppGen
      .nav-items.clearfix
        a.nav-item.nav-link(href='/list') List
        if !hasUsers
          a.nav-item.nav-link(href='/insertmenu') Insert
        a.nav-item.nav-link(href='/about') About
        a.nav-item.nav-link(href='/contact') Contact
        a.nav-item.nav-link(href='/help') Help
        if hasUsers
          div(class="container")
            div(class="dropdown")
              if currentUser
                a.btn.btn-light.pull-md-right(style = "padding: 3px;" class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown")
                  img.avatar.img-circle.hidden-xs-down(style = "max-width:30px; max-height: 30px;" src="https://i.imgur.com/uYq21Ou.png")
